# urxvt setting
URxvt*depth: 24
URxvt*background: Black
URxvt*foreground: White
URxvt*fading: 20
URxvt*font: xft:Ricty:size=10:antialias=true \
            xft:DejaVu Sans Mono:size=11

# URxvt*scrollBar: False
URxvt*scrollBar_right: True
URxvt*scrollBar_floating: True

# urxvt: Extension
URxvt.perl-ext-common: default,resize-font
URxvt.resize-font.smaller: C-minus
URxvt.resize-font.bigger: C-plus
URxvt.resize-font.reset: C-equal
