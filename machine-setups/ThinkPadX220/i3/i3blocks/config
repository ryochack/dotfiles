separator_block_width=15
#markup=none

[wlan]
label=wlan:
command=~/.config/i3/i3blocks/wlan
interval=5

[ethernet]
label=eth:
command=~/.config/i3/i3blocks/ethernet
interval=5

[cpu]
label=cpu:
command=~/.config/i3/i3blocks/cpu
interval=2

