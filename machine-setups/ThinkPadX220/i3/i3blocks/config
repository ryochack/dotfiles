[memory]
label=mem:
command=~/.config/i3/i3blocks/memory
interval=2

[volume]
label=vol:
command=~/.config/i3/i3blocks/volume
interval=once
signal=1

[battery]
label=bat:
command=~/.config/i3/i3blocks/battery
interval=20

[temperature]
label=temp:
command=~/.config/i3/i3blocks/temperature
interval=20

[time]
command=date '+%Y-%m-%d(%a) %H:%M'
interval=1

