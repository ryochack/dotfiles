snippet     if
abbr        if {}
    if ${1:/* condition */} {
        ${0:/* code */}
    }

snippet else
    else {
        ${0}
    }

snippet elseif
    else if ${1:/* condition */} {
        ${0}
    }

snippet     ifelse
abbr        if {} else {}
    if ${1:condition} {
        ${2}
    } else {
        ${3}
    }

snippet     for
abbr        for {}
    for ${1}=0; $1<${2}; $1++ {
        ${0}
    }


